@model pacoteTurismo;
@{
  ViewData["Title"] = "Cadastro de Pacotes Turísticos";
}

<h2>Cadastro de novos usuários!</h2>

<form asp-action="Cadastro" , method="post">
  <p>
    <label asp-for="nome">Nome: </label>
    <input type="text" asp-for="nome" required>
  </p>
  <p>
    <label asp-for="origem">Origem: </label>
    <input type="text" asp-for="origem" required>
  </p>
  <p>
    <label asp-for="destino">Destino: </label>
    <input type="text" asp-for="destino" required>
  </p>
  <p>
    <label asp-for="atrativos">Atrativos: </label>
    <input type="text" asp-for="atrativos" required>
  </p>
  <p>
    <input type="submit" value="Cadastrar">
  </p>
</form>
<p id="pMensagem">@ViewBag.Mensagem</p>