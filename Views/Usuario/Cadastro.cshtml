@model Usuarios;
@{
  ViewData["Title"] = "Cadastro de Usuário";
}

<h2>Cadastro de novos usuários!</h2>

<form asp-action="Cadastro" , method="post">
  <p>
    <label asp-for="nome">Nome: </label>
    <input type="text" asp-for="nome" required>
  </p>
  <p>
    <label asp-for="login">Login: </label>
    <input type="text" asp-for="login" required>
  </p>
  <p>
    <label asp-for="senha">Senha: </label>
    <input type="text" asp-for="senha" required>
  </p>
  <p>
    <input type="submit" value="Cadastrar">
  </p>
</form>
<p id="pMensagem">@ViewBag.Mensagem</p>