@model Usuarios;
@{
  ViewData["Title"] = "Edição de Usuário";
}

<h2>Atualizar usuarios!</h2>

<form asp-action="Atualizar" , method="post">
  <input type="hidden" asp-for="id">
  <p>
    <label asp-for="nome">Nome: </label>
    <input asp-for="nome" required>
  </p>
  <p>
    <label asp-for="login">Login: </label>
    <input asp-for="login" required>
  </p>
  <p>
    <label asp-for="senha">Senha: </label>
    <input asp-for="senha" required>
  </p>
  <p>
    <input type="submit" value="Editar">
  </p>
</form>
<p id="pMensagem">@ViewBag.Mensagem</p>